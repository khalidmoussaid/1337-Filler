#include <unistd.h>
#include <stdio.h>

void ft_putchar(char c)
{
    write(1, &c, 1);
}

void ft_putstr(char *str)
{
    int i;

    i = 0;
    while (str[i])
    {
        ft_putchar(str[i]);
        i++;
    }
}

int ft_strlen(char *str)
{
    int i;

    i = 0;
    while (str[i])
        i++;
    return (i);
}

int is_alpha(char c)
{
    if (c >= 'a' && c <= 'z')
        return (1);
    return (0);
}

int check_valid_flag(char *str)
{
    int i;

    i = 0;
    if (str[i] == '-')
        i++;
    else
        return (0);
    while (str[i])
    {
        if (str[i] == '-' && !str[i+1])
            return (1);
        if (is_alpha(str[i]) == 0)
            return (0);
        i++;
    }
    return (1);
}

int find(char *str, char c)
{
    int i;

    i = 0;
    while (str[i])
    {
        if (str[i] == c)
            return (1);
        i++;
    }
    return (0);
}

int main(int argc, char **argv)
{
    int i;
    int flag;
    char str[]= "00000000000000000000000000000000";

if (argc > 1)
{
    i = 1;
    flag = 0;
    while (i < argc)
    {
        if (argv[i][0] == '-' && check_valid_flag(argv[i]) == 0)
        {
            ft_putstr("Invalid Option\n");
            return (0);
        }
        if (find(argv[i], 'h') == 1)
            flag = 1;
           
        i++;
    }
    if (flag)
    {
        ft_putstr("options: abcdefghijklmnopqrstuvwxyz\n");
        return (0);
    }
    int j;
    int index;
    i = 1;
    while (i < argc)
    {
        if (argv[i][0] != '-')
        {
            i++;
            continue;
        }
        j = 1;
        while (argv[i][j])
        {
            index = 'z' - argv[i][j] + 6;
            if (str[index] == '0')
                str[index] = '1';
            j++;
        }
        i++;
    }
    i = 0;
    flag = 0;
    while (str[i])
    {
        if (flag == 8)
        {
            ft_putchar(' ');
            flag = 1;
        }
        else
            flag++;
        ft_putchar(str[i]);
        i++;
    }
    ft_putchar('\n');
}
else
    ft_putstr("options: abcdefghijklmnopqrstuvwxyz\n");
    return (0);
}